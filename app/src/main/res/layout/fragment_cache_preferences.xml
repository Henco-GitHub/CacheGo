<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:clickable="true"
    tools:context=".fragment_cachePreferences">


    <LinearLayout
        android:id="@+id/logo_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Cache Preferences"
            android:textColor="@color/black"
            android:textSize="30dp">

        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logo_banner"
        android:layout_margin="25dp"
        android:background="@color/yellow"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ScreenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Types of caches"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"></TextView>

        <LinearLayout
            android:id="@+id/llDifficulty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ScreenTitle"
            android:layout_above="@+id/btnSaveChanges"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/black">

                <CheckBox
                    android:id="@+id/checkEasy"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/yellow"
                    android:text="Easy Difficulty"></CheckBox>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/black">

                <CheckBox
                    android:id="@+id/checkNormal"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/yellow"
                    android:text="Normal Difficulty"></CheckBox>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/black">

                <CheckBox
                    android:id="@+id/checkHard"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="@color/yellow"
                    android:text="Hard Difficulty"></CheckBox>

            </FrameLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnSaveChanges"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Save Changes"
            android:backgroundTint="@color/blue"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"></Button>

    </RelativeLayout>

</RelativeLayout>

